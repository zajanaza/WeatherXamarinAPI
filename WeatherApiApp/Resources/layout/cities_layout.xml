<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">  
    <TextView
        android:text="@string/textview_city_madrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:textSize="40sp"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:id="@+id/textViewMadrid" />
    <TextView
        android:text="@string/textview_city_elvellon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:textSize="40sp"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:id="@+id/textViewOstrava" />    
    <TextView
        android:text="@string/textview_city_praha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:textSize="40sp"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:id="@+id/textViewRome" />
     <TextView
        android:text="@string/textview_city_skarsvag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:textSize="40sp"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:id="@+id/textViewSydney" />
    <TextView
        android:text="@string/textview_city_reykjavík"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:textSize="40sp"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:id="@+id/textViewReykjavík" />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textInputSearch" />
    <Button
        android:text="Search"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:height="80dp"
        android:id="@+id/buttonSearch" />

</LinearLayout>
